<h1>編集画面</h1>

<div class="error">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book'%><br>

  <%= link_to "show", @book %> <%= link_to "back", "/books" %>

<% end %>